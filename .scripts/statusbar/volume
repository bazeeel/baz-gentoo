#!/bin/sh

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e alsamixer & ;;
	#2)  ;;
	4) amixer -D pulse set Master 5%+ unmute ;;
	5) amixer -D pulse set Master 5%- unmute ;;
	3) pgrep -x dunst >/dev/null && notify-send "<b>ðŸ“¢ Volume module:</b>
- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change."
esac

[ "$(amixer --get-mute)" = "1" ] && printf "ðŸ”‡\\n" && exit

vol=$(amixer get Master | awk -F'[]%[]' '/%/ {if ($7 == "off") { print "MM" } else { print $2 }}' | head -n 1)

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
	icon="ðŸ”ˆ"
else
	icon="ðŸ”‰"
fi

printf "%s %s%%\\n" "$icon" "$vol"
